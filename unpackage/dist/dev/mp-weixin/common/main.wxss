











/*每个页面公共css */
.container {
	height: calc(100vh - 70px);
	width: 100%;
	overflow: hidden;
}
.container scroll-view {
	height: 100%;
}
.fixbg {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	background-size: cover;
	background-position: center 0;
	-webkit-filter: blur(25rpx);
	        filter: blur(25rpx);
	-webkit-transform: scale(1.0);
	        transform: scale(1.0);
}

